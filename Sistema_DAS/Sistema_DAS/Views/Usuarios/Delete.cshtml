@model Sistema_DAS.Models.Usuario

@{
    ViewData["Title"] = "Delete";
}

<h1>ELIMINAR</h1>

<h2>Esta seguro de que quiere eliminar esto? </h2>

<div>
    <h4>Usuario del Sistema</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2"> Correo : 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">Nombre : 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre_user)
        </dd>
        <dt class = "col-sm-2">Password : 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Password)
        </dd>
        <dt class = "col-sm-2">Rol : 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Rol)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Atras</a>
    </form>
</div>
